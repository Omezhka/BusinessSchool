@model BusinessSchool.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseID" class="control-label">Курс</label>
                <select asp-for="CourseID" class ="form-control" asp-items="ViewBag.Courses"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label">Студент</label>
                <select asp-for="StudentID" class ="form-control" asp-items="ViewBag.Students"></select>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label">Оценка</label>
                <select asp-for="Grade" asp-validation-for="Grade" class="form-control" asp-items="ViewBag.Grades"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
