@model BusinessSchool.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Подробности</h1>

<div>
    <h4>Студент</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.LastName)*@ Фамилия
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.FirstName)*@ Имя
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.EnrollmentDate)*@ Дата зачисления
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Название курса</th>
                    <th>Оценка</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade);
                        </td>
                    </tr>
                }

            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
